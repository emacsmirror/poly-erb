<!-- FROM: https://github.com/thoughtbot/clearance/blob/master/app/views/layouts/application.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tag %>
  </head>
  <body>

    <div id="header">
      <% if signed_in? %>
        <%= button_to t(".sign_out"), sign_out_path, method: :delete %>
      <% else %>
        <%= link_to t(".sign_in"), sign_in_path %>
      <% end %>
    </div>

    <div id="extra-header2">
      <% if signed_in? %>
        <div>
          <%= button_to t(".sign_out"), sign_out_path, method: :delete %>
        </div>
      <% else %>
        <span>
          <%= link_to t(".sign_in"), sign_in_path %>
        </span>
      <% end %>
    </div>

    <div id="flash">
      <% flash.each do |key, value| -%>
        <div id="flash_<%= key %>"><%=h value %></div>
      <% end %>
    </div>
    
    <%= yield %>
    
  </body>
</html>
